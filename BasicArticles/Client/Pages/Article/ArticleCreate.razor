@page "/article/create"
@inherits ArticleCreateBase
@attribute [Authorize]

<EditForm Model="@ArticleViewModel" OnValidSubmit="HandleValidCreate">
    <DataAnnotationsValidator />

    <div class="form-title">Create Category</div>
    <ArticleForm Model="@ArticleViewModel" />

    <button class="form-submit" type="submit">Submit</button>
    <button class="form-cancel" type="submit" @onclick="Cancel_Click">Cancel</button>
</EditForm> 