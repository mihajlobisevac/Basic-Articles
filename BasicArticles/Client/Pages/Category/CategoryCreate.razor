@page "/category/create"
@inherits CategoryCreateBase
@attribute [Authorize]

    <EditForm Model="@CategoryViewModel" OnValidSubmit="HandleValidCreate">
        <DataAnnotationsValidator />

        <div class="form-title">Create Category</div>
        <CategoryForm Model="@CategoryViewModel" />

        <button class="form-submit" type="submit">Submit</button>
        <button class="form-cancel" type="submit" @onclick="Cancel_Click">Cancel</button>
    </EditForm>
